<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Campaign.
    -->
    <changeSet id="20161023105618-1" author="jhipster">
        <createTable tableName="campaign">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="name_short" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="product" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="spot_amount" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="start_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="end_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="campaign_state_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>

            <column name="business_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="campaign" columnName="start_date" columnDataType="datetime"/>
        <dropDefaultValue tableName="campaign" columnName="end_date" columnDataType="datetime"/>

        <createTable tableName="campaign_price_schedule">
            <column name="price_schedules_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="campaigns_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="campaigns_id, price_schedules_id" tableName="campaign_price_schedule"/>

    </changeSet>
</databaseChangeLog>
